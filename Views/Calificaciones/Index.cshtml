@model IEnumerable<API.Dto.Calificaciones.Salida.DatosCalificacion>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="col-md-9 ms-sm-auto col-lg-12 px-md-4">
    <br />
    <h2>Gestión de Calificaciones</h2>

    <div class="container-fluid">
        <br />
        <div style="width:100%; margin:0 auto;">
            <button id='btnAbrirDialogAgregarCalificacion' class="btn btn-primary" style="background-color: #1A2DF3; width:10%">Agregar</button>
            <br /><br />
            <table class="display table table-bordered" id="CalificacionesTabla" style="width:100%">
                <thead>
                    <tr>
                        <th>Entrega ID</th>
                        <th class="text-center">Puntuación</th>
                        <th>Comentario</th>
                        <th>Fecha Calificación</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id='EntregaParam'>
                                @Html.DisplayFor(modelItem => item.Entrega_id)
                            </td>
                            <td id='PuntuacionParam' class="text-center">
                                @Html.DisplayFor(modelItem => item.Puntuacion)
                            </td>
                            <td id='ComentarioParam'>
                                @Html.DisplayFor(modelItem => item.Comentario)
                            </td>
                            <td id='FechaParam'>
                                @Html.DisplayFor(modelItem => item.Fecha_calificacion)
                            </td>
                            <td class="text-center">
                                <a name="btnEditarCalificacion" data-id="@item.Calificacion_id" style="color: #1A2DF3"><i class="fa fa-edit"></i></a>
                                <a name="btnEliminarCalificacion" data-id="@item.Calificacion_id" style="color: #1A2DF3"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div id="modalAgregarCalificacion" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Calificación</h4>
                </div>
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <div>
                        <label for="IDAgregarCalificacionCodigo">ID Calificación:</label>
                        <input class="form-control" id="IDAgregarCalificacionCodigo" disabled placeholder="Sin asignar">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarCalificacionEntrega">ID de Entrega:</label>
                        <input class="form-control" id="IDAgregarCalificacionEntrega" type="number">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarCalificacionPuntuacion">Puntuación:</label>
                        <input class="form-control" id="IDAgregarCalificacionPuntuacion" type="number" min="1" max="5">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarCalificacionComentario">Comentario:</label>
                        <textarea class="form-control" id="IDAgregarCalificacionComentario" rows="3"></textarea>
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarCalificacionFecha">Fecha de Calificación:</label>
                        <input class="form-control" id="IDAgregarCalificacionFecha" type="datetime-local">
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnCancelarCalificacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button id='btnAgregarCalificacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaExitosa" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>Transacción realizada exitosamente</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnMensajeExitoso' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaEliminarCalificacion" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>¿Está seguro que desea eliminar la Calificación?</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnAceptarEliminarCalificacionConfirmacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                    <button id='btnCancelarEliminarCalificacionConfirmacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @section scripts
    {
        <script src="~/js/Calificacion.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>

    }
</main>