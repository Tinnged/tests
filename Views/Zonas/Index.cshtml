@model IEnumerable<API.Dto.Zonas.Salida.DatosZonas>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="col-md-9 ms-sm-auto col-lg-12 px-md-4">
    <br />
    <h2>Gestión de Zonas</h2>

    <div class="container-fluid">
        <br />
        <div style="width:100%; margin:0 auto;">
            <button id='btnAbrirDialogAgregarZona' class="btn btn-primary" style="background-color: #1A2DF3; width:10%">Agregar</button>
            <br /><br />
            <table class="display table table-bordered" id="ZonasTabla" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th class="text-end">TarifaBase</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id='NombreParam'>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td id='DescripcionParam'>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td id='CostoParam' class="text-end">
                                @item.TarifaBase.ToString("N2")
                            </td>
                            <td id='TipoParam' class="text-center">
                                @(item.Activa ? "Activa" : "Inactiva")
                            </td>
                            <td class="text-center">
                                <a name="btnEditarZona" data-id="@item.ZonaID" style="color: #1A2DF3"><i class="fa fa-edit"></i></a>
                                <a name="btnEliminarZona" data-id="@item.ZonaID" style="color: #1A2DF3"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div id="modalAgregarZona" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Agregar Zona</h4>
                </div>
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <div>
                        <label for="IDAgregarZonaCodigo">Código de Zona:</label>
                        <input class="form-control" id="IDAgregarZonaCodigo" disabled placeholder="Sin asignar">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarZonaNombre">Digite la Nombre:</label>
                        <input class="form-control" id="IDAgregarZonaNombre">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarZonaDescripcion">Digite el Descripcion:</label>
                        <input class="form-control" id="IDAgregarZonaDescripcion" >
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarZonaTarifaBase">Digite el Tarifa Base:</label>
                        <input class="form-control" id="IDAgregarZonaTarifaBase" type="number">
                    </div>
                    <div style="margin-top: 3%">
                        <label for="IDAgregarZonaEstado">Digite el Estado:</label>
                        <select id="IDAgregarZonaEstado" class="select form-control">
                            <option value="true" selected>Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnCancelarZona' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button id='btnAgregarZona' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaExitosa" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>Transacción realizada exitosamente</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnMensajeExitoso' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <div id="modalVentanaEliminarZona" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <br />
                <div style="width: 80%; margin-left: 10%" class="modal-body">
                    <p>¿Está seguro que desea eliminar el Zona?</p>
                </div>
                <br />
                <div class="modal-footer">
                    <button id='btnAceptarEliminarZonaConfirmacion' type="button" class="btn btn-primary" style="background-color: #1A2DF3">Aceptar</button>
                    <button id='btnCancelarEliminarZonaConfirmacion' type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @section scripts
    {
        <script src="~/js/Zona.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>

    }
</main>